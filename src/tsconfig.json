{
  "compilerOptions": {
    "baseUrl": "",
    "mapRoot": "./",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",

    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true, 
    "removeComments": true, 
    "preserveConstEnums": true,   
    "emitDecoratorMetadata": true,   
    "experimentalDecorators": true, 
    "suppressImplicitAnyIndexErrors": true,
    
    "lib": [ "es2016", "es2016.array.include", "es6", "dom" ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "firebase"
    ]
  }
}
